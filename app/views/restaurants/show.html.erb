<h1><%=@restaurant.name%></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.description %></p>
<h3>Rating: <%= @restaurant.rating %></h3>
<h4>phone nr:<%= @restaurant.phone_number %></h4>

<h3><%= link_to "Back!", restaurants_path %></h3>
<h3><%=link_to "Edit!", edit_restaurant_path(@restaurant)%></h3>
<%= link_to "Delete", restaurant_path(@restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<%= link_to "Write review!", new_restaurant_review_path(@restaurant) %>

<ul>
  <% @restaurant.reviews.each do |review|%>
    <li><%= review.content %> - <%= review.rating %></li>
  <% end %>
</ul>
